<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.thoughtsquare"
          android:versionCode="1"
          android:versionName="1.0">
    <application android:label="ThoughtSquare"
                 android:icon="@drawable/icon"
                 android:theme="@android:style/Theme.NoTitleBar">
        <activity android:name=".activity.ThoughtSquareActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.RegisterActivity"/>
        <activity android:name=".activity.UpdateLocationActivity"/>
        <activity android:name=".activity.ShoutActivity"/>
        <activity android:name=".activity.AddLocationActivity"/>
        <service android:name=".service.NotificationService"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.SEND_SMS"/>
</manifest>
